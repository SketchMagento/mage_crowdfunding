<?php
$_cart = Mage::getSingleton('checkout/cart'); $_quote = $_cart->getQuote(); 
$_country = Mage::getSingleton('core/session')->getCountry();
$_state = Mage::getSingleton('core/session')->getState();
$_postcode = Mage::getSingleton('core/session')->getPostcode(); 
//set variables and get rates
$_quote->getShippingAddress()
	->setCountryId('IN')->setRegion($_state)->setRegionId(1)
	->setPostcode($_postcode)->setCollectShippingRates(true);
$_quote->save(); 
$_rates = $_quote->getShippingAddress()->getAllShippingRates(); $allowed_rates = array(); 
foreach ($_rates as $_rate) { array_push( $allowed_rates, $_rate->getCode() ); }
$_shippingCode = $allowed_rates[0];
if (!empty($_shippingCode)) { 
  $address = $_quote->getShippingAddress(); 
  if ($address->getCountryId() == '') $address->setCountryId('IN'); 
  if ($address->getRegion() == '') $address->setRegion('AP'); 
  if ($address->getRegionId() == '') $address->setRegionId('1'); 
  //if ($address->getCity() == '') $address->setCity(''); 
  if ($address->getPostcode() == '') $address->setPostcode($_postcode); 
  $address->setShippingMethod($_shippingCode)->setCollectShippingRates(true); 
  $_quote->save(); 
}
